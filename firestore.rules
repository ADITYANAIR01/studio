rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      // Allow read/write access only to authenticated users for their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to user's credentials subcollection
      match /credentials/{credentialId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to user's api-keys subcollection
      match /api-keys/{apiKeyId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to user's google-codes subcollection
      match /google-codes/{codeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to user's settings subcollection
      match /settings/{settingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
